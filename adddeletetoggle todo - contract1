pragma solidity >=0.5.0 <0.6.0;

contract ToDo {
    //to track total Tasks
    uint id = 0;
    //properties of Tasks
    struct Tasks{
        string name;
        uint id;
        bool isCompleted;
        bool isDeleted;
    }
    
    //to populate struct
    mapping (uint => Tasks) taskList;
    //adding Task
    function addTask(string memory _name) public {
        id++;        //task1
        taskList[id] = Tasks(_name,id, false, false);//creating task and putting it against it's ID
    }
    
    function toggle(uint _id) public {
        require(taskList[_id].isDeleted != true);
        Tasks memory _task = taskList[_id];
        _task.isCompleted = !_task.isCompleted;
        taskList[_id] = _task;
    
    }

    function delTask(uint _id) public {
        taskList[_id].isDeleted = true;
    }
   
}
